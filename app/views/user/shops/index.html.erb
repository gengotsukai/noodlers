<div class="row">   
	<div class="col-xs-12">
		<h2>Shops index</h2>
		<!--shops一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th></th>
					<th>店名</th>
					<th>いいねの数</th>
					<th>コメントの数</th>
				</tr>
			</thead>

			<tbody>
				<% @shops.each do |shop| %>
				<tr>
					<td>
						<%= link_to user_user_path(shop.user) do %>
						<%= image_tag shop.user.image.url %>
						<% end %>
					</td>
					<td>
						<%= link_to shop.shop_name, user_shop_path(shop) %></td>
					<td>
					 <% if shop.favorited_by?(current_user) %>
    				   <%= link_to user_shop_shop_likes_path(shop), method: :delete do %>
           			    <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
      					<%= shop.shop_likes.count %> いいね
    				   <% end %>
					 <% else %>
    				   <%= link_to user_shop_shop_likes_path(shop), method: :post do %>
      				    <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
      				    <%= shop.shop_likes.count %> いいね
    				   <% end %>
					 <% end %>
					</td>
					<td>コメント数: <%= shop.shop_comments.count %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<%= link_to "店を新たに登録", new_user_shop_path, method: :get, class: "btn btn-primary" %>

	</div>
</div>
</div>