<div class="row">
  <h2 class="heading">ジャンル追加・一覧画面</h2>

  <div class="row">
    <div class="col-xs-12">
      <%= form_for @genre, url: user_genres_path do |f| %>
        <!-- 入力フォーム -->
        <div class="genre-field">
          <%= f.label :ジャンル　%>
          <%= f.text_field :genre_name %>
        </div>
        <div class="genre-button">
          <%= f.submit "追加", class: "btn btn-md btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  <br>
  <!-- ジャンル一覧 -->
  <div class="row">
    <div class="col-xs-6">
      <table class="table table-hover">
        <thead>
          <tr class="active">
            <th>ジャンル名</th>
            <th>店の数</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.genre_name %></td>
              <td><%#= genre.shop.count %></td>
              <td><%= link_to "編集する",edit_user_genre_path(genre), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>