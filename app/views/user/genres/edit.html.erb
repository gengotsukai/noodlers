<div class="row">
  <h2 class="heading">ジャンル詳細・編集画面</h2>
  <div class="row">
    <div class="col-xs-6">
      <table class="table table-hover">
        <thead>
          <tr class="active">
            <th>店名</th>
            <th>感想</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @shops.each do |shop| %>
            <tr>
              <td><%= shop.shop_name %></td>
              <td><%= shop.shop_comment.opinion %></td>
              <td><%= link_to "店の詳細へ",user_shop_path(shop), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-6">
      <%= form_for @genre, url: user_genre_path, method: :patch do |f| %>
        <!-- 入力フォーム -->
        <div class="genre-field">
          <%= f.label :ジャンル名　%>
          <%= f.text_field :genre_name %>
        </div>
        <div class="genre-button">
          <%= f.submit "変更を保存する", class: "btn btn-md btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>