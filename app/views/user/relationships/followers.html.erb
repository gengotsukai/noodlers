<div class="row">   
<div class="col-lg-12" style="background-color: white;">

<h2>フォローされているユーザー一覧</h2>
<!--users一覧 -->
<table class="table">
	<thead>
		<tr>
			<th>プロフィール画像</th>
			<th>ニックネーム</th>
			<th colspan="3"></th>
			<th colspan="3"></th>
			<th colspan="3"></th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= render 'shared/userimage', user: user %></td><br>
			<td><%= user.nickname%></td>
			<td>
				フォロー数: <%= user.followings.count %>
			</td>
			<td>
				フォロワー数: <%= user.followers.count %>
			</td>
			<td>
				<%= render 'user/relationships/follow_button', user: user %>
			</td>
			<td><%= link_to "ユーザーの詳細ページへ", user_user_path(user), class: "user_#{user.id}" %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
</div>