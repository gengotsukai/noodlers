<div class="row">
<div class="col-xs-12">

<h2>Users</h2>
<!--users一覧 -->
<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>nickname</th>
			<th colspan="3"></th>
			<th colspan="3"></th>
			<th colspan="3"></th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			
			<td><%= user.nickname%></td>
			<td>
				フォロー数: <%= user.followings.count %>
			</td>
			<td>
				フォロワー数: <%= user.followers.count %>
			</td>
			<td>
				<%= render 'user/relationships/follow_button', user: user %>
			</td>
			<td><%= link_to "Show", user_user_path(current_user), class: 'btn btn-primary btn-block' %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>


