<div class="row">
<div class="col-xs-12">

<h2>Users</h2>
<!--users一覧 -->
<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>nickname</th>
			<th colspan="3"></th>
			<th colspan="3"></th>
			<th colspan="3"></th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td>
				<%= link_to user_user_path(user) do %>
				 <%= render 'shared/userimage', user: user %>
				<% end %>
			</td>
			<td><%= user.nickname%></td>
			<td>
				フォロー数: <%= link_to user.followings.count, user_follows_path(user) %>
			</td>
			<td>
				フォロワー数: <%= link_to user.followers.count, user_followers_path(user) %>
			</td>
			<td>
				<%= render 'user/relationships/follow_button', user: user %>
			</td>
			<td><%= link_to "Show", user_user_path(current_user), class: 'btn btn-primary btn-block' %></td>
		</tr>
		<% end %>
		<%= paginate @users %>
	</tbody>
</table>
</div>
</div>


