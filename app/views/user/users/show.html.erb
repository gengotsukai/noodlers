<div class="row">
<div class="col-xs-12">

<h2>Shops</h2>
<!--books一覧 -->
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>店名</th>
			<th>感想</th>
		</tr>
	</thead>

	<tbody>
		<% @shops.each do |shop| %>
		<tr>
			<td><%= render 'shared/userimage', user: shop.user %></td>
			<td><%= shop.shop_name %></td>
			<td><%#= shop.shop_comment.opinion %></td>
		</tr>
		<% end %>
	</tbody>

</table>
</div>
</div>
</div>
