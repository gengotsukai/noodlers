<% if user_signed_in? %>
  <% if shop.favorited_by?(current_user) %>
    <span class="glyphicon glyphicon-heart" aria-hidden="true"></span><%=link_to user_shop_shop_likes_path(shop), method: :delete, remote: true do %>
      <%= shop.shop_likes.count %> いいね
    <% end %>
	<% else %>
    <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span><%= link_to user_shop_shop_likes_path(shop), method: :post, remote: true do %>
      <%= shop.shop_likes.count %> いいね
    <% end %>
	<% end %>
<% else %>
  <p><span>お気に入り数: </span><%= shop.shop_likes.count %></p>
<% end %>